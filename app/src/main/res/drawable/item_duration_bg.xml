<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33FF6A00">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000"/>  <!-- fundo levemente escuro -->
            <corners android:radius="18dp"/>
            <stroke
                android:width="2dp"
                android:color="#FF6A00" />       <!-- borda laranja -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

</ripple>
