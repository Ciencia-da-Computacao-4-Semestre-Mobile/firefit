<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TÍTULO + VOLTAR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/btnBack1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="@string/treinos"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Space android:layout_width="match_parent" android:layout_height="20dp"/>


            <!-- ======================================================= -->
            <!-- ===================== CARD 1 ========================== -->
            <!-- ======================================================= -->

            <FrameLayout
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="22dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:background="#33FF4F2E"
                    android:elevation="2dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1E1E1F"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="7dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="22dp">

                        <ImageView
                            android:id="@+id/icon_fire1"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:src="@drawable/logo"
                            app:tint="#FF4F2E"
                            android:alpha="0.9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/forca_total"
                            android:textColor="#FFFFFF"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/icon_fire1"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/sub1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/treino_completo"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/title1"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <LinearLayout
                            android:id="@+id/timeContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toBottomOf="@id/sub1"
                            app:layout_constraintStart_toStartOf="parent">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/ic_hourglass"
                                app:tint="#80FFFFFF"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:text="@string/tempo_45"
                                android:textColor="#80FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@id/timeContainer">

                            <TextView
                                android:id="@+id/nivel1"
                                android:text="@string/nivel_avancado"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>

                            <Button
                                android:id="@+id/btnIniciarCardio1"
                                android:text="@string/iniciar"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:backgroundTint="#FF4F2E"
                                android:paddingHorizontal="14dp"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progresso"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="14dp"
                            android:progress="70"
                            android:max="100"
                            android:backgroundTint="#3A3A3C"
                            android:progressTint="#FF4F2E"
                            android:scaleY="1.4"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>


            <!-- ======================================================= -->
            <!-- ===================== CARD 2 ========================== -->
            <!-- ======================================================= -->

            <FrameLayout
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="22dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:background="#33FFA54F"
                    android:elevation="2dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#FF4F2E"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="7dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="22dp">

                        <ImageView
                            android:id="@+id/icon_fire2"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:alpha="0.9"
                            android:src="@drawable/logo"
                            app:tint="#FFFFFF"
                            android:contentDescription="@string/desc_logo_treino"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/title2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Cardio Matinal"
                            android:textColor="#FFFFFF"
                            android:textSize="26sp"
                            android:layout_weight="1"/>



                        <TextView
                            android:id="@+id/sub2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/treino_resistencia"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/title2"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <LinearLayout
                            android:id="@+id/timeContainer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toBottomOf="@id/sub2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="12dp">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/ic_hourglass"
                                app:tint="#FFFFFF"
                                android:layout_marginEnd="8dp"
                                android:contentDescription="@string/desc_tempo"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30 minutos"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnBar2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp"
                            style="?android:attr/buttonBarStyle"
                            app:layout_constraintTop_toBottomOf="@id/timeContainer2">

                            <TextView
                                android:id="@+id/nivel2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nivel_avancado"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:textStyle="bold"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <Button
                                android:id="@+id/btnIniciarCardio"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:paddingHorizontal="14dp"
                                android:backgroundTint="#FFFFFF"
                                android:textColor="#FF4F2E"
                                android:text="@string/iniciar"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                style="?android:attr/buttonBarButtonStyle" />




                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progresso2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="14dp"
                            android:progress="0"
                            android:max="100"
                            android:progressTint="#FFFFFF"
                            android:backgroundTint="#D9531E"
                            android:scaleY="1.4"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- BOTÃO INICIAR TREINO DIÁRIO -->


            <!-- BOTÃO FINAL -->

            <Button
                android:id="@+id/btnStartDaily"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="INICIAR TREINO DIÁRIO"
                android:textColor="#FF4F2E"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/btn_outline"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- NAV RESPONSIVO -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/fire_cardd"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:itemActiveIndicatorStyle="@style/NavActiveIndicatorStyle"
        app:menu="@menu/bottom_menu"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
