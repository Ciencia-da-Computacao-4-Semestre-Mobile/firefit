<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="90dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TÍTULO + SETA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_back"
                    app:tint="#FFFFFF"
                    android:contentDescription="@string/desc_voltar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="@string/treinos"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- CARD 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="22dp"
                android:backgroundTint="#1E1E1F"
                app:cardCornerRadius="20dp"
                app:cardElevation="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="22dp">

                    <!-- Ícone grande -->
                    <ImageView
                        android:id="@+id/icon_fire1"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_alignParentEnd="true"
                        android:alpha="0.9"
                        android:src="@drawable/logo"
                        app:tint="#FF4F2E"
                        android:contentDescription="@string/desc_logo_treino" />

                    <!-- Título -->
                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forca_total"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <!-- Sub-título -->
                    <TextView
                        android:id="@+id/sub1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title1"
                        android:layout_marginTop="4dp"
                        android:text="@string/treino_completo"
                        android:textColor="#B6B6B6"
                        android:textSize="12sp" />

                    <!-- Ampulheta + minutos -->
                    <LinearLayout
                        android:id="@+id/timeContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_below="@id/sub1"
                        android:layout_marginTop="12dp">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/ic_hourglass"
                            app:tint="#FFFFFF"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="@string/desc_tempo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tempo_45"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Container horizontal para Nível + Botões -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_below="@id/timeContainer"
                        android:layout_marginTop="12dp">

                        <!-- Nível -->
                        <TextView
                            android:id="@+id/nivel1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nivel_avancado"
                            android:textColor="#CFCFCF"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <!-- Space para empurrar os botões para a direita -->
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <!-- Botões -->
                        <LinearLayout
                            android:id="@+id/btnGroup1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:paddingHorizontal="14dp"
                                android:background="@drawable/btn_outline_workouts"
                                android:text="@string/iniciar"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:paddingHorizontal="14dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/btn_outline_workouts"
                                android:text="@string/ver_mais"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Barra de progresso -->
                    <ProgressBar
                        android:id="@+id/progresso"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0.5dp"
                        android:progress="70"
                        android:max="100"
                        android:progressTint="#FF4F2E"
                        android:backgroundTint="#3A3A3C"
                        android:scaleY="1.4"
                        android:clipToPadding="false"
                        android:padding="2dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/fire_cardd"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:itemActiveIndicatorStyle="@style/NavActiveIndicatorStyle"
        app:menu="@menu/bottom_menu"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
