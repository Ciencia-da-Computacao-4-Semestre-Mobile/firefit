<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fire_background">

    <!-- =================== SCROLL ORIGINAL =================== -->
    <ScrollView
        android:id="@+id/scrollMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_back"
                    app:tint="#FFFFFF"
                    android:contentDescription="@string/desc_voltar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="Voltar"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- =================== CARD PRINCIPAL =================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/card_bg"
                android:padding="14dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardio Matinal"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/fire_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Treino de resistência cardiovascular"
                        android:textColor="@color/fire_gray"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 MIN"
                            android:textColor="@color/fire_text"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginEnd="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Iniciante"
                            android:textColor="@color/fire_text"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center" />

            </LinearLayout>

            <!-- =================== RESUMO DO TREINO =================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumo do Treino"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/fire_text"
                android:layout_marginTop="22dp" />

            <!-- =================== OPÇÕES DE CARDIO (ADICIONADO AQUI) =================== -->
            <RadioGroup
                android:id="@+id/groupCardio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="14dp"
                android:padding="6dp">

                <RadioButton
                    android:id="@+id/rbCorrida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Corrida"
                    android:textSize="16sp"
                    android:textColor="@color/fire_text" />

                <RadioButton
                    android:id="@+id/rbBicicleta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bicicleta"
                    android:textSize="16sp"
                    android:textColor="@color/fire_text" />

                <RadioButton
                    android:id="@+id/rbCaminhada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caminhada"
                    android:textSize="16sp"
                    android:textColor="@color/fire_text" />
            </RadioGroup>
            <!-- =================== FIM DAS OPÇÕES DE CARDIO =================== -->

            <!-- =================== LISTA DE EXERCÍCIOS =================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercícios"
                android:textColor="@color/fire_text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="26dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerExercicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>


            <!-- =================== BOTÕES =================== -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnIniciarTreino"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Iniciar Treino"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/btn_orange"
                android:textColor="@color/fire_text"
                android:layout_marginTop="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnVoltar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Voltar"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_outline"
                android:textColor="@color/fire_primary" />

        </LinearLayout>

    </ScrollView>

    <!-- =================== BOTTOM NAV =================== -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/background"
        app:itemIconTint="@color/fire_primary"
        app:itemTextColor="@color/fire_primary"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
