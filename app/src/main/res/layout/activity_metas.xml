<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F">

    <!-- ===== TOPO ===== -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnVoltar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/meta_ig" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Metas"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- ===== SCROLL ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:fillViewport="true"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ===== RESUMO ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg_dark"
                android:padding="18dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="173dp"
                    android:layout_height="36dp"
                    android:text="Resumo da Semana"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="6dp"
                    android:text="VocÃª concluiu 2 de 3 metas ðŸ”¥"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- ===== META: PESO ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg_dark"
                android:padding="18dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp">

                <TextView
                    android:text="Peso"
                    android:textColor="#FF5A1F"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <TextView
                    android:text="Meta: 80 kg"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <TextView
                    android:text="Atual: 85 kg"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="14dp"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/progress_orange"/>
            </LinearLayout>

            <!-- ===== META: TREINOS ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg_dark"
                android:padding="18dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp">

                <TextView
                    android:text="Treinos Semanais"
                    android:textColor="#FF5A1F"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <TextView
                    android:text="Meta: 5 treinos"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <TextView
                    android:text="Realizados: 2"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="14dp"
                    android:max="100"
                    android:progress="40"
                    android:progressDrawable="@drawable/progress_orange"/>
            </LinearLayout>

            <!-- ===== META: ALIMENTAÃ‡ÃƒO ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg_dark"
                android:padding="18dp"
                android:layout_marginBottom="24dp"
                android:elevation="6dp">

                <TextView
                    android:text="AlimentaÃ§Ã£o"
                    android:textColor="#FF5A1F"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <TextView
                    android:text="Meta: dieta semanal"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <TextView
                    android:text="Cumprimento: 20%"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="14dp"
                    android:max="100"
                    android:progress="20"
                    android:progressDrawable="@drawable/progress_orange"/>
            </LinearLayout>

            <!-- ===== FRASE MOTIVACIONAL ===== -->
            <TextView
                android:text="ðŸ’ª Pequenos passos todos os dias geram grandes resultados."
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"/>

            <!-- ===== BOTÃƒO ===== -->
            <TextView
                android:id="@+id/btnAdicionarMeta"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:text="ADICIONAR NOVA META"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_orange"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
