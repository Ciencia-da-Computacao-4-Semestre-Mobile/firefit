<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TOPO - VOLTAR + TÍTULO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back"
                android:tint="#FFFFFF"
                android:contentDescription="Voltar" />

            <TextView
                android:layout_marginStart="12dp"
                android:text="Eventos"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- ESPAÇO -->
        <View android:layout_height="10dp" android:layout_width="match_parent"/>

        <!-- CARD DO PROFESSOR -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:backgroundTint="#2A2A2A"
            app:cardCornerRadius="14dp"
            app:cardElevation="6dp">


            <LinearLayout
                android:padding="23dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imgProfessor"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:src="@drawable/circle_mask"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_marginStart="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="11dp"
                        android:text="PROFESSOR"
                        android:textColor="#FF7C32"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNome"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:text="Boca de 09"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:text="BOCA DE 09"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <!-- INFO CARD -->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:backgroundTint="#1F1F1F">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!-- Linha: Dia -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/border_orange">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#FF7C32" />
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Dia"
                            android:textColor="#B3B3B3"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvData"
                            android:text="02 de Dezembro 2025"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#2E2E2E" />

                <!-- Linha: Horário -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/border_orange">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_clock"
                            android:tint="#FF7C32"/>
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Horário"
                            android:textColor="#B3B3B3"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <!-- HORA ESTILIZADA (cada caractere espaçado) -->
                        <TextView
                            android:id="@+id/tvHorario"
                            android:text="2 0 : 3 5   ( 2 1 : 1 0 )"
                            android:textColor="#FF7C32"
                            android:textSize="16sp"
                            android:letterSpacing="0.18"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#2E2E2E" />

                <!-- Linha: Capacidade -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="6dp">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/border_orange">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_profile"
                            android:tint="#FF7C32"/>
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Capacidade"
                            android:textColor="#B3B3B3"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <!-- progress + flame icon in overlay -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="6dp">

                            <ProgressBar
                                android:id="@+id/progressCapacidade"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="12dp"
                                android:layout_gravity="center_vertical"
                                android:background="#FF7C30"
                                android:max="30"
                                android:progress="17" />

                            <ImageView
                                android:id="@+id/imgFlame"
                                android:layout_width="55dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_vertical|start"
                                android:layout_marginStart="120dp"
                                android:src="@drawable/logo"
                                android:tint="#FF6A2B" />

                            <TextView
                                android:id="@+id/tvCap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="17/30"
                                android:textColor="#FF7C30"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginEnd="4dp"/>
                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ESPAÇO PARA BAIXO -->
        <View android:layout_height="28dp" android:layout_width="match_parent"/>

        <!-- BOTÃO AGENDAR -->

        <!-- BOTÃO EVENTOS SALVOS (outline) -->

        <View
            android:layout_width="match_parent"
            android:layout_height="63dp" />

        <Button
            android:id="@+id/btnAgendar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/btn_primary"
            android:text="AGENDAR"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnEventosSalvos"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_outline"
            android:text="EVENTOS SALVOS"
            android:textAllCaps="true"
            android:textColor="#FF7C32"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@null"/>

        <!-- Espaço para bottom bar -->

    </LinearLayout>
</ScrollView>
