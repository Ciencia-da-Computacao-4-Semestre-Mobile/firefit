<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background">

        <!-- Imagem / GIF -->
        <ImageView
            android:id="@+id/imgExercicio"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:scaleType="centerCrop"/>

        <!-- Card inferior -->
        <LinearLayout
            android:id="@+id/cardInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:background="@drawable/card_bg"
            android:clipToOutline="true"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Agachamento"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSeries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="4 Séries"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRepeticoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="12-15 Repts."
                android:textColor="#C7C7C7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtPausa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pausa: 60-90 Segs."
                android:textColor="#C7C7C7"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnProximo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#FF4500"
                android:fontFamily="sans-serif-medium"
                android:text="PRÓXIMO"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
