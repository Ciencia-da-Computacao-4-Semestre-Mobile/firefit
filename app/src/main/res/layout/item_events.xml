<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_bg"
    android:layout_marginBottom="12dp"
    android:padding="8dp"
    android:clickable="false"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants">

    <!-- IMAGEM À ESQUERDA (agora responsiva com peso) -->
    <ImageView
        android:id="@+id/imgEvent"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="0.90"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_left"
        android:clipToOutline="true"
        android:src="@drawable/event_placeholder" />

    <!-- ESPAÇO RESPONSIVO -->
    <Space
        android:layout_width="8dp"
        android:layout_height="match_parent" />

    <!-- COLUNA DE INFORMAÇÕES -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.60"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yoga"
            android:textStyle="bold"
            android:textColor="@color/fire_text"
            android:textSize="22sp"
            android:layout_marginTop="4dp" />

        <!-- Instrutor -->
        <TextView
            android:id="@+id/tvInstructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedro Marcal"
            android:textStyle="bold"
            android:textColor="@color/fire_gray"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Data -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: 02/12"
            android:textColor="@color/fire_gray"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Horário -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horário: 20:35"
            android:textColor="@color/fire_gray"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- STATUS -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISPONÍVEL"
            android:background="@drawable/bg_status_confirmado"
            android:textSize="12sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</LinearLayout>
