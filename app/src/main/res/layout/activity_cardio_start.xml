<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerStart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCardioTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treino"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/fire_text"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txtCardioInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duração: 30 minutos"
            android:layout_marginTop="8dp"
            android:textColor="@color/fire_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fire_cardd"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Aqui podemos incluir a lista de exercícios específica por tipo -->
        <!-- Para simplificar, vamos injetar a lista estática abaixo -->
        <LinearLayout
            android:id="@+id/exerciseList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Exemplos (você pode trocar dinamicamente se quiser) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aquecimento - 5 min"
                android:textColor="@color/fire_text"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fase principal - séries"
                android:textColor="@color/fire_text"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtFaseAtual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aquecimento"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/fire_text"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="@color/fire_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnStartPause"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Iniciar"
                android:backgroundTint="@color/orange"/>

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Reset"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/orange"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtFinished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treino concluído!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:textColor="@android:color/holo_green_dark"/>

    </LinearLayout>
</ScrollView>
