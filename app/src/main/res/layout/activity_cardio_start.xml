<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2">

    <!-- BOTÃO VOLTAR -->
    <ImageView
        android:id="@+id/btnVoltar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back"
        app:tint="@color/fire_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- CONTEÚDO SCROLL -->
    <ScrollView
        android:id="@+id/containerStart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/card_bg"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btnVoltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background">

            <!-- TÍTULO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/txtCardioTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treino"
                    android:textColor="@color/fire_text"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"/>

                <TextView
                    android:id="@+id/txtCardioInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duração • 30 min"
                    android:textColor="@color/fire_gray"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- IMAGEM / GIF -->
            <ImageView
                android:id="@+id/gifExercicio"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />

            <!-- DIVISOR -->
            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="0.85"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/fire_cardd"/>


            <!-- ÁREA DE EXERCÍCIOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/card_bg_top">

                <!-- Nome fase -->
                <TextView
                    android:id="@+id/txtFaseAtual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AQUECIMENTO"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="center"/>

                <!-- Timer -->
                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/orange"
                    android:textSize="62sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"/>

                <!-- Botões -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartPause"
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:text="▶ Iniciar"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        app:backgroundTint="@color/orange"
                        app:cornerRadius="14dp"
                        android:layout_margin="10dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReset"
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:text="↺ Resetar"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        app:backgroundTint="@color/orange"
                        app:cornerRadius="14dp"
                        android:layout_margin="10dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtFinished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✔ Treino Finalizado!"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:visibility="gone"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
