<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A0A0A">

    <!-- CONTEÚDO PRINCIPAL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- CARD CENTRAL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_outline_cardio">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T E M P O"
                    android:textColor="#8C8C8C"
                    android:textSize="12sp"
                    android:letterSpacing="0.3"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/txtTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30:00"
                    android:textSize="72sp"
                    android:textStyle="bold"
                    android:textColor="#FF6A00" />

                <ProgressBar
                    android:id="@+id/progressTimer"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="20dp"
                    android:progress="30"
                    android:background="#2A2A2A"
                    android:progressTint="#FF6A00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treino em andamento"
                    android:textColor="#BDBDBD"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- BOTÕES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="36dp">

                <Button
                    android:id="@+id/btnPause"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="PAUSAR"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF4500" />

                <Button
                    android:id="@+id/btnFinish"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="12dp"
                    android:text="FINALIZAR"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF4500" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAVIGATION -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/fire_cardd"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:itemActiveIndicatorStyle="@style/NavActiveIndicatorStyle"
        app:menu="@menu/bottom_menu"
        app:labelVisibilityMode="unlabeled" />

</LinearLayout>
