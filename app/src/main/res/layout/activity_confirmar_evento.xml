<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- CARD DO EVENTO -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:backgroundTint="#1A1A1A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgEvento"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/roundedd_image"
                    android:clipToOutline="true"
                    android:src="@drawable/crossfit" />

                <TextView
                    android:id="@+id/txtNomeEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome do Evento"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/txtProfessorEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Professor: "
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtDataEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data: "
                    android:textColor="#BDBDBD"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtHoraEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora: "
                    android:textColor="#BDBDBD"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtDuracaoEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duração: "
                    android:textColor="#BDBDBD"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/btnFavorito"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:padding="4dp"
                    android:src="@drawable/ic_favorite_outline"
                    app:tint="@android:color/holo_orange_dark" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BOTÕES -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SALVAR"
            android:textAllCaps="false"
            android:paddingVertical="12dp"
            app:backgroundTint="#2E7D32"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCELAR"
            android:textAllCaps="false"
            android:paddingVertical="12dp"
            app:backgroundTint="#D84315"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdicionarCalendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADICIONAR AO CALENDÁRIO"
            android:textAllCaps="false"
            android:paddingVertical="12dp"
            app:backgroundTint="#1976D2"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>